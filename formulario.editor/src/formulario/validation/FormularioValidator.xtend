					}
				}

			}
			
			if (!flag){
				warning('El campo debe de estar incluido en al menos una asercion',
					Formularios_DASOFTPackage.Literals.FORMULARIO__COMPROBACION_CAMPOS,
					'faltaCampo')
				
			}
		}
		
